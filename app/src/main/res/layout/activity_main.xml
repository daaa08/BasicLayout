<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.da08.basiclayout.MainActivity">

    <Button
        android:id="@+id/relbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rel"
        tools:layout_editor_absoluteY="105dp"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/linbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lin"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/relbtn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relbtn" />

    <Button
        android:id="@+id/gribtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gri"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/linbtn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linbtn" />

    <Button
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spin"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/gribtn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gribtn" />
</android.support.constraint.ConstraintLayout>
